#ifndef GRAPHDATA_H
#define GRAPHDATA_H

#define GRAPHDATA_VERSION_MAJOR @GRAPHDATA_VERSION_MAJOR@
#define GRAPHDATA_VERSION_MINOR @GRAPHDATA_VERSION_MINOR@
#define GRAPHDATA_VERSION_PATCH @GRAPHDATA_VERSION_PATCH@

#include<stdio.h>


enum GRAPHTYPE { UNDIRECTED, DIRECTED };
enum GRAPHIMPL { ARRAY, LINKED, HASHED };

struct feature_t {
    size_t featureid;
    char *featurename;
    double val;
    void *fdata;
    struct feature *prev;
    struct feature *next;
};

typedef struct feature_t feature;

struct node_t {
    size_t nodeid;
    struct feature *attrs;
    struct edge *edges;
    struct node *prev;
    struct node *next;
};

typedef struct node_t node;

struct edge_t {
    size_t u;
    size_t v;
    double cap;
    double flow;
    struct feature *attrs;
    struct edge *prev;
    struct edge *next;
};

typedef struct edge_t edge;

struct graph_t {
    enum GRAPHTYPE gtype; //type of graph being represented
    enum GRAPHIMPL gimpl; //backing implementation structures

    size_t nodecnt; //node count
    size_t edgecnt; //edge count

    struct node *nodes; //Generic node listing
    struct node *edges; //Generic edge listing

    void *nodeImpl; //Implementation-specific node data
    void *edgeImpl; //Implementation-specific edge data
    void *capImpl; //Implementation-specific capacity data
    void *flowImpl; //Implementation-specific flow data
};

typedef struct graph_t graph;





#endif //GRAPHDATA_H